{
  "manifest_version": 3,
  "name": "JobCleaner",
  "version": "1.2.1",
  "description": "Oculta ofertas de empresas no deseadas en CompuTrabajo.",
  "permissions": ["storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://co.computrabajo.com/*"],
      "js": [
        "content/components/toast.js",
        "content/components/cleaner.js",
        "content/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
