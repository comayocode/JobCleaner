{
  "manifest_version": 3,
  "name": "JobCleaner",
  "version": "1.0",
  "description": "Oculta ofertas de empresas no deseadas en CompuTrabajo.",
  "permissions": ["storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://co.computrabajo.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
